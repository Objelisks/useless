include ../common/head
include ../common/nav
- project = project || {};

doctype html
html
  head
    +headstuff
  body
    .container
      +nav
      section.content
        header: h1 edit mode project version
        form(action='/projects', method='post', enctype='multipart/form-data')
          section
            label(for='title'): strong title
            br
            input(name='title', type='text', value=project.title || '')
          section
            label(for='img'): strong img
            br
            input(name='img', type='file', value='upload img')
          section
            label(for='body'): strong content
            br
            textarea(name='body', cols='40', rows='10') #{project.body || ''}
          input(type='submit', value='submit')